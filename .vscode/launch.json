    "version": "0.2.0",
    "configurations": [

        {
            "name": "mysite",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\mysite\\manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true
        },
        {
            "name": "FitnessSite",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\FitnessSite\\manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },

            "envFile": "${workspaceFolder}/.env"
        }
    ]
